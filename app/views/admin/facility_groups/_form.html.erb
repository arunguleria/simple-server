<div class="row">
  <div class="col-md-6">
    <%= bootstrap_form_with(model: [:admin, facility_group], local: true, autocomplete: "off", label_errors: true, html: {id: "facility-group-form"}) do |form| %>
      <% if @facility_group.facilities.map(&:invalid?).any? %>
        <div class="alert alert-warning pt-4">
          <p>Some facilities in this Facility Group have errors. Please fix them before updating this Facility
            Group:</p>
          <ul>
            <% @facility_group.facilities.each do |f| %>
              <% if f.errors.present? %>
                <li><%= f.errors.full_messages.to_sentence %>
                  in <%= link_to f.name, edit_admin_facility_group_facility_path(@facility_group.id, f.id) %></li>
              <% end %>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form.select(:organization_id, organizations.map { |organization| [organization.name, organization.id] }) %>
      <%= form.text_field :name, id: :facility_name, required: true, help: "Usually the name of a District", autocomplete: "off" %>
      <% if Flipper.enabled?(:region_level_sync) %>
        <%= form.select :state, @available_states.zip(@available_states), {include_blank: true}, required: true %>
      <% end %>

      <% if facility_group.facilities.present? %>
        <%= form.collection_check_boxes :facility_ids, facility_group.facilities, :id, :name, label: "Associated facilities", checked_value: 1 %>
      <% end %>

      <% if Facility.where(facility_group: nil).present? %>
        <%= form.collection_check_boxes :facility_ids, Facility.where(facility_group: nil), :id, :name, label: "Unassociated facilities", checked: true %>
      <% else %>
        <% if facility_group.new_record? %>
          <div class="row">
            <div class="col-md-9 mb-3 text-warning">All existing facilities belong to a facility group.</div>
          </div>
        <% end %>
      <% end %>

      <div class="mt-3">
        <h3>Blocks</h3>
        <ul class="list-group list-group-flush" id="block-list">
          <% @blocks&.each do |block| %>
            <li class="list-group-item align-middle <%= 'deletable-block' if block.children.present? %>" data-block-identifier="<%= block.id %>">
              <div class="row">
                <div class="col-10 block-name">
                  <%= block.name %>
                </div>
                <div class="col-2 text-right">
                  <% if block.children.present? %>
                    <i class="fas fa-trash-alt text-grey"></i>
                  <% else %>
                    <i class="fas fa-trash-alt remove-block text-danger cursor-pointer"
                       data-block-identifier="<%= block.id %>"
                       onclick="removeBlock(this.getAttribute('data-block-identifier'))"></i>
                  <% end %>
                </div>
              </div>
            </li>
          <% end %>
        </ul>
        <div class="input-group mb-3">
          <input type="text" class="form-control" id="new-block-name" placeholder="Add new block">
          <div class="input-group-append">
            <a class="btn btn-primary text-white add-block" onclick="submitAddBlock()">Add</a>
          </div>
        </div>
      </div>

      <div class="mt-5 mb-5">
        <h3>Diabetes enabled?</h3>
        <div class="alert alert-primary mt-3" role="alert">
          <% is_diabetes_enabled = facility_group.diabetes_enabled? %>

          <% if is_diabetes_enabled && facility_group.facilities.present? %>
            Diabetes management is already enabled for all facilities in this group.
          <% else %>
            This will enable Diabetes management for all associated facilities in this group.
          <% end %>
        </div>
        <%= form.check_box :enable_diabetes_management,
            {id: :facility_group_enable_diabetes_management,
                checked: is_diabetes_enabled,
                disabled: is_diabetes_enabled && facility_group.facilities.present?,
                onclick: "confirmDisableDM(this)"},
            true, false %>
      </div>

      <%= form.select(:protocol_id, protocols.order(:name).map { |protocol| [protocol.name, protocol.id] }) %>

      <%= form.primary("Save facility group") %>
    <% end %>
  </div>
</div>

<template id="block-row">
  <li class="list-group-item align-middle">
    <div class="row">
      <div class="col-10 block-name">
      </div>
      <div class="col-2 text-right">
        <i class="fas fa-trash-alt remove-block text-danger cursor-pointer"></i>
      </div>
    </div>
  </li>
</template>

<script>
  let existingBlocks = <%= raw @blocks&.pluck(:id) || [] %>

  function confirmDisableDM(el) {
    if (!el.checked && <%= facility_group.diabetes_enabled? && facility_group.facilities.present? %>)
      confirm("Are you sure? This will disable diabetes management for all associated facilities.")
  }

  $("#new-block-name").on("keydown", function (e) {
    if (e.key === "Enter") {
      e.preventDefault();
      submitAddBlock();
    }
  })

  function newBlockRow(name) {
    let template = $("template#block-row").html()
    let $template = $(template);
    $template.find(".block-name").html(name);
    $template.attr("data-block-identifier", name);
    $template.attr("onclick", "removeBlock(this.getAttribute('data-block-identifier'))");

    return $template;
  }

  function submitAddBlock() {
    let $blockInput = $("#new-block-name")
    addBlock($blockInput.val());
    $blockInput.val("");
    scrollBlockListToBottom();
  }

  function addBlock(name) {
    if(name !== "") {
      $('<input>').attr({
        "name": "facility_group[blocks_added][]",
        "value": name,
        "data-block-identifier": name,
        "type": "hidden"
      }).appendTo("#facility-group-form");
      newBlockRow(name).appendTo("#block-list");
    }
  }

  function removeBlock(identifier) {
    if(existingBlocks.includes(identifier)) {
      $('<input>').attr({
        "name": "facility_group[blocks_deleted][]",
        "value": identifier,
        "data-block-identifier": identifier,
        "type": "hidden"
      }).appendTo("#facility-group-form");
    }

    $(`.list-group-item[data-block-identifier=${identifier}]`).remove();
  }

  function scrollBlockListToBottom() {
    $("#block-list").scrollTop($("#block-list")[0].scrollHeight)
  }
</script>
